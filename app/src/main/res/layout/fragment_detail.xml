<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_fragment_detail_pager_indicator"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/padding_large"
        android:layout_marginBottom="@dimen/padding_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <View
            android:id="@+id/view_fragment_detail_indicator1"
            android:layout_width="@dimen/padding_medium"
            android:layout_height="@dimen/padding_medium"
            android:background="@drawable/ic_circle"/>

        <View
            android:id="@+id/view_fragment_detail_indicator2"
            android:layout_width="@dimen/padding_medium"
            android:layout_height="@dimen/padding_medium"
            android:layout_marginLeft="@dimen/padding_small"
            android:background="@drawable/ic_circle"/>

        <View
            android:id="@+id/view_fragment_detail_indicator3"
            android:layout_width="@dimen/padding_medium"
            android:layout_height="@dimen/padding_medium"
            android:layout_marginLeft="@dimen/padding_small"
            android:background="@drawable/ic_circle"/>

        <View
            android:id="@+id/view_fragment_detail_indicator4"
            android:layout_width="@dimen/padding_medium"
            android:layout_height="@dimen/padding_medium"
            android:layout_marginLeft="@dimen/padding_small"
            android:background="@drawable/ic_circle"/>

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2_fragment_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>